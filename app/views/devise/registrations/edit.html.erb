
 <main>
    <div class="login py-8">
      <div class="max-w-8xl mx-auto sm:px-6 lg:px-10 py-6">
        
        <div class=" lg:grid lg:grid-cols-1 lg:gap-12 lg:items-center">
          <div>   
            <div class=" flex item-center mx-auto shadow-lg px-10 flex flex-col bg-gray-600 bg-opacity-25 rounded-lg">
            <h1 class=" text-white mt-4 text-xl text-center">編輯個人資料</h1>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
                <%# email %>

                <div class="flex grid grid-cols-1 gap-4 lg:grid-cols-3 my-4">
                    <div>
                    <p class="mb-1 text-white ">姓名</p>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"email", class:"w-full px-5 py-3 text-gray-500 bg-white bg-opacity-50  rounded focus:outline-none focus:bg-yellow-200" %>
                    </div>
                    <div>
                    <p class="mb-1 text-white ">編號</p>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"email", class:"w-full px-5 py-3 text-gray-500 bg-white bg-opacity-50  rounded focus:outline-none focus:bg-yellow-200" %>
                    </div>
                     <div>
                    <p class="mb-1 text-white ">權限</p>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"email", class:"w-full px-5 py-3 text-gray-500 bg-white bg-opacity-50  rounded focus:outline-none focus:bg-yellow-200" %>
                    </div>
                  </div>

                  <div class="flex grid grid-cols-1 gap-4 lg:grid-cols-2 my-4">
                  <%# 密碼 %>
                    <div>
                      <p class="mb-1 text-white ">密碼</p>
                        <%=f.password_field :password, autocomplete: "new-password" ,placeholder:"請輸入六位數密碼", class:"w-full px-5 py-3 text-gray-500 bg-white bg-opacity-50  rounded focus:outline-none focus:bg-yellow-200" %>
                    </div>
                    <%# 確認密碼 %>
                      <div>
                      <p class="mb-1 text-white ">密碼</p>
                        <%=f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder:"請再輸入六位數密碼", class:"w-full px-5 py-3 text-gray-500 bg-white bg-opacity-50  rounded focus:outline-none focus:bg-yellow-200" %>
                    </div>
                    
                      <div class=" bg-white mb-3 py-3 px-4 border border-gray-400  focus:outline-none rounded-md focus:ring-1 ring-cyan-500">
                        <%=f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder:"請再輸入六位數密碼", class:"focus:outline-none" %>
                      </div>
                  </div>
                  <div class="mt-4 flex justify-center mx-auto ">

                        <div class="actions">
                          <%= f.submit t('.update'), class:"w-20 border-red-500 bg-red-500 text-white rounded-md py-2 m-2 transition duration-500 ease select-none hover:bg-red-600 focus:outline-none focus:shadow-outline" %>
                        </div>
                        <div>
                          <button class=" w-20 border-red-500 bg-red-500 text-white rounded-md py-2 m-2 transition duration-500 ease select-none hover:bg-red-600 focus:outline-none focus:shadow-outline"><%= link_to t('devise.shared.links.back'), :back %></button></div>
                  
                </div>
              <% end %>
              
             
         
          </div>

        </div>  
      </div>
    </div>                 
  </main>

<style>
  .login{
  background: url('https://i.imgur.com/6JMiEK4.jpg');
  background-repeat: no-repeat;
  background-size: cover;
}
</style>
<!-- component -->

<h2><%= t('.title', resource: resource.model_name.human) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.update') %>
  </div>
<% end %>

<h3><%= t('.cancel_my_account') %></h3>

<p><%= t('.unhappy') %> <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %></p>

<%= link_to t('devise.shared.links.back'), :back %>



