
 <main>
    <div class="login py-16">
      <div class="max-w-8xl mx-auto sm:px-6 lg:px-10 py-4">
        
        <div class=" lg:grid lg:grid-cols-1 lg:gap-12 lg:items-center">
          <div>   
            <div class=" flex item-center mx-auto shadow-lg px-10 flex flex-col bg-gray-600 bg-opacity-25 rounded-lg">
            <h1 class=" text-white mt-4 text-xl text-center">編輯個人資料</h1>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
                <%# email %>

                <div class="flex grid grid-cols-1 gap-4 lg:grid-cols-3 my-4">
                    <div>
                    <p class="mb-1 text-white ">姓名</p>
                      <%= f.text_field :name,class:"w-full px-5 py-3 text-gray-500 bg-white bg-opacity-50  rounded focus:outline-none focus:bg-yellow-200"%>
                    </div>
                    <div>
                    <p class="mb-1 text-white ">公會編號</p>
                      <%= f.text_field :number, placeholder:"", class:"w-full px-5 py-3 text-gray-500 bg-white bg-opacity-50  rounded focus:outline-none focus:bg-yellow-200"%>
                    </div>
                     <div>
                    <p class="mb-1 text-white ">權限</p>
                       <%= f.text_field :role, placeholder:"", class:"w-full px-5 py-3 text-gray-500 bg-white bg-opacity-50  rounded focus:outline-none focus:bg-yellow-200"%>
                    </div>
                  </div>

                  <div class="flex grid grid-cols-1 gap-4 lg:grid-cols-2 my-4">
                  <%# Email %>
                      <div>
                        <p class="mb-1 text-white ">Email</p>
                           <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"email", class:"w-full px-5 py-3 text-gray-500 bg-white bg-opacity-50  rounded focus:outline-none focus:bg-yellow-200" %>
                      </div>
                 
                     <%# 舊密碼 %>
                      <div>
                      <p class="mb-1 text-white ">舊密碼</p>
                          <%= f.password_field :current_password, autocomplete: "current-password", placeholder:"", class:"w-full px-5 py-3 text-gray-500 bg-white bg-opacity-50  rounded focus:outline-none focus:bg-yellow-200"%>
                      </div>
                       <%# 新密碼 %>
                      <div>
                      <p class="mb-1 text-white ">新密碼</p>
                          <%= f.password_field :password, autocomplete: "current-password",placeholder:"", class:"w-full px-5 py-3 text-gray-500 bg-white bg-opacity-50  rounded focus:outline-none focus:bg-yellow-200"%>
                      </div>
                      <div>
                      <p class="mb-1 text-white ">再輸入新密碼</p>
                          <%=f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder:"", class:"w-full px-5 py-3 text-gray-500 bg-white bg-opacity-50  rounded focus:outline-none focus:bg-yellow-200" %>
                      </div>
                  </div>
                  <%# 按鈕區 %>
                  <div class="mt-4 flex justify-center mx-auto ">

                        <div class="actions">
                          <%= f.submit t('.update'), class:"w-20 bg-gradient-to-r from-red-500 to-yellow-400 text-white rounded-md py-2 m-2 transition duration-500 ease select-none hover:bg-red-600 focus:outline-none focus:shadow-outline" %>
                        </div>
                          <% end %>
              
                        <div>
                          <button class=" w-20 bg-gradient-to-r from-yellow-400 to-red-500 text-white rounded-md py-2 m-2 transition duration-500 ease select-none hover:bg-red-600 focus:outline-none focus:shadow-outline"><%= link_to t('devise.shared.links.back'), :back %></button></div>
                        <div>
                  </div>
            

          </div>

        </div>  
      </div>
    </div>                 
  </main>

<style>
  .login{
  background: url('https://i.imgur.com/6JMiEK4.jpg');
  background-repeat: no-repeat;
  background-size: cover;
}
</style>
